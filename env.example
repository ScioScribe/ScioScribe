# =============================================================================
# ScioScribe Environment Configuration - Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=ScioScribe
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_HOST=localhost
APP_PORT=8000

# =============================================================================
# API KEYS - AI/ML SERVICES (REQUIRED)
# =============================================================================
# OpenAI API Key (required for most AI features)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Tavily API Key (optional - for web search features)
# Get your key at: https://tavily.com/
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# =============================================================================
# LANGCHAIN & LANGSMITH SETTINGS (OPTIONAL BUT RECOMMENDED)
# =============================================================================
# LangSmith Tracing (optional but recommended for debugging)
# Get your key at: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_pt_your-langsmith-api-key-here
LANGCHAIN_PROJECT=ScioScribe
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# SQLite Database URL (default is fine for development)
DATABASE_URL=sqlite:///./database/scioscribe.db

# =============================================================================
# FASTAPI SETTINGS
# =============================================================================
# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings (adjust for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# ANALYSIS AGENT CONFIGURATION
# =============================================================================
# Model Provider Settings
ANALYSIS_MODEL_PROVIDER=openai
ANALYSIS_MODEL_NAME=gpt-4.1
ANALYSIS_TEMPERATURE=0.1
ANALYSIS_MAX_TOKENS=4000
ANALYSIS_MAX_ITERATIONS=10

# Agent Behavior Settings
ANALYSIS_ENABLE_STREAMING=true
ANALYSIS_ENABLE_DEBUG=false
ANALYSIS_MAX_LENGTH=5000
ANALYSIS_INCLUDE_CONFIDENCE=true

# =============================================================================
# FILE UPLOAD & STORAGE SETTINGS
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=100000000  # 100MB
ALLOWED_FILE_EXTENSIONS=csv,xlsx,xls,pdf,txt,docx,jpg,jpeg,png,mp3,wav,m4a

# Temporary file storage
TEMP_UPLOAD_DIR=./temp_uploads
PROCESSED_FILES_DIR=./processed_files

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/scioscribe.log

# Sentry Error Tracking (optional)
# Get your DSN at: https://sentry.io/
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development features
ENABLE_DOCS=true
ENABLE_PROFILING=false
ENABLE_MOCK_SERVICES=false

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Test Database
TEST_DATABASE_URL=sqlite:///./test.db
RUN_TESTS_IN_MEMORY=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_EXPERIMENT_PLANNING=true
ENABLE_DATA_INGESTION=true
ENABLE_ANALYSIS_ENGINE=true
ENABLE_VOICE_TRANSCRIPTION=true
ENABLE_IMAGE_OCR=true
ENABLE_COLLABORATIVE_FEATURES=false

# =============================================================================
# OPTIONAL EXTERNAL SERVICES
# =============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=your-email@gmail.com

# Redis (for caching and task queues - optional)
REDIS_URL=redis://localhost:6379/0

# Celery Task Queue Settings (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# =============================================================================
# CLOUD SERVICES (OPTIONAL)
# =============================================================================
# Google Cloud Storage (optional)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name